<!DOCTYPE html>
<html>
<head>
    <title><%= student ? 'Edit Student' : 'Add Student' %></title>
</head>
<body>
    <h2><%= student ? 'Edit Student' : 'Add Student' %></h2>
    <form action="/students/<%= student ? student._id : '' %>" method="POST">
        <% if (student) { %>
            <input type="hidden" name="_method" value="PUT"> <!-- For updating -->
        <% } %>
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= student ? student.name : '' %>" required>
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="<%= student ? student.age : '' %>" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= student ? student.email : '' %>" required>
        </div>
        <button type="submit"><%= student ? 'Update' : 'Add' %></button>
    </form>
    <a href="/students">Back to Dashboard</a>
</body>
</html>